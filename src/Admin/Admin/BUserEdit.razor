@inherits BUserEditBase
<BForm Value="EditingUser" @ref="form" EnableAlwaysRender="true">
    <BFormItem TValue="string" IsHidden="true" Name="@nameof(UserModel.Id)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="用户名" Name="@nameof(UserModel.Username)" IsRequired="true">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="邮箱" Name="@nameof(UserModel.Email)">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="List<string>" EnableAlwaysRender="true" Label="角色权限" Name="@nameof(UserModel.RoleIds)">
        <BTransfer @ref="btransfer" List1="RoleItems" EnableAlwaysRender="true" LeftTitle="所有角色" RightTitle="所属角色">
        </BTransfer>
    </BFormItem>
    @if (User == null)
    {
        <BFormItem TValue="string" Label="密码" Name="@nameof(UserModel.Password)">
            <BInput Type="InputType.Password" TValue="string"></BInput>
        </BFormItem>
    }
    <BFormActionItem Style="text-align:center">
        <BButton Type="ButtonType.Primary" OnClick="SubmitAsync">确定</BButton>
    </BFormActionItem>
</BForm>