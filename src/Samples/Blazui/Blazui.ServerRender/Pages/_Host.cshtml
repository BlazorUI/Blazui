@page "/"
@namespace Element.ServerRender
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blazui, Element的blazor版本，用 .NET 写前端的 UI 框架，开箱即用，服务端渲染版本</title>
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="/_content/Element/css/fix.css" />
    <link rel="stylesheet" href="/_content/Element/css/index.css" />
    <link href="~/_content/Element.Markdown/css/editormd.min.css" rel="stylesheet" />
    <link href="~/_content/Element.Markdown/css/editor.css" rel="stylesheet" />
    <link href="https://cdn.bootcss.com/codemirror/5.48.4/addon/fold/foldgutter.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/codemirror/5.48.4/codemirror.min.css" rel="stylesheet">
    <style>
        html {
            display: flex;
            width: 100%;
            height: 100%;
        }

            html > body {
                display: flex;
                flex: 1;
            }

        html > body > app {
            display: flex;
            flex: 1;
        }
    </style>
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?4f06cf15c4f1d176154b386144f9f8f7";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>

</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
    </app>

    <script src="/_content/Element/js/dom.js"></script>
    <script src="https://cdn.bootcss.com/codemirror/5.48.4/codemirror.min.js"></script>
    <script src="~/_content/Element.Markdown/js/addons.min.js"></script>
    <script src="~/_content/Element.Markdown/js/continuelist.js"></script>
    <script src="~/_content/Element.Markdown/js/modes.min.js"></script>
    <script src="/_content/Element.Markdown/js/dom.js"></script>
    <script src="https://cdn.bootcss.com/monaco-editor/0.18.0/min/vs/loader.js"></script>
    <script>
        require.config({ paths: { 'vs': 'https://cdn.bootcss.com/monaco-editor/0.18.0/min/vs' } });
        require(['vs/editor/editor.main'], function () {
            window.renderHightlight = function (el) {
                if (el.children[0].getAttribute("class")) {
                    return;
                }
                monaco.editor.colorizeElement(el.children[0], {
                    theme: "vs"
                });
            }
        });
    </script>
    <script src="_framework/blazor.server.js"></script>
    <script type="text/javascript" src="https://v1.cnzz.com/z_stat.php?id=1278553576&web_id=1278553576"></script>
    <script type="text/javascript" src="//js.users.51.la/20745793.js"></script>
</body>
</html>
